---
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0">
    <meta name="language" content="fr">
    <meta name="author" content="devscast.tech, contact@devscast.tech">
    <meta name="robots" content="index">
    <meta name="robots" content="follow">
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <meta name="description" content="Un Deep Learning Indaba𝕏 est un Indaba ou une conférence organisée localement qui permet de s'assurer que les connaissances et les capacités en matière d'apprentissage automatique sont plus largement diffusées sur le continent africain."/>
    <meta name="keywords" content="Congo, DRC, RDC, Deep Learning, Indabax, apprentissage automatique">
    <meta property="og:title" content="Indabax DRC | Indabax-drc.com">
    <meta property="og:image" content="/images/logo.png">
    <meta property="og:description" content="Un Deep Learning Indaba𝕏 est un Indaba ou une conférence organisée localement qui permet de s'assurer que les connaissances et les capacités en matière d'apprentissage automatique sont plus largement diffusées sur le continent africain. ">
    <meta name="apple-mobile-web-app-title" content="Indabax DRC | Indabax-drc.com">
    <meta name="twitter:title" content="Deep Learning Indabax DRC | Indabax-drc.com">

    <title>{title} | Indabax-drc.com</title>

    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono&amp;family=Urbanist:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
</head>
<body class="bg-black text-white">
	<Header />
	<slot />
    <Footer />
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Website",
            "url": "https://indabax-drc.com"
        }
    </script>
</body>
</html>
